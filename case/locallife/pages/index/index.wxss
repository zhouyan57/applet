/**index.wxss**/
.swiper {
  height: 400rpx;
}
.img {
  width: 100%;
  height: 400rpx;
}
.grid {
  display: flex;
  flex-wrap: wrap;
  border-top: 1px solid #ccc;
  border-left: 1px solid #ccc;
}
.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  padding: 40rpx 0;
  border-bottom: 1px solid #ccc;
  border-right: 1px solid #ccc;
  box-sizing: border-box;
}
.item image {
  width: 80rpx;
  height: 80rpx;
}
.bottom {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
}
.left, .right {
  width: 45%;
  height: 150rpx;
  border-radius: 10rpx;
  line-height: 150rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  color: #fff;
}
.left{
  background-color: #f88487;
}
.right {
  background-color: #94bee4;
}